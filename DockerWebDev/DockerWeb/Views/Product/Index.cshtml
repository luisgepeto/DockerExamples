@model List<DockerWeb.Models.ProductViewModel>
@{
    ViewData["Title"] = "Products";
}
<h2>Products</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Name</th>
            <th>Price</th>
            <th></th>
            </tr>
    </thead>
  @foreach(var element in Model){
      <tr>
          <td>
              @element.ProductId
          </td>
          <td>
              @element.ProductName
          </td>
          <td>
              @element.Price
          </td>
          <td>
              <a class="btn btn-primary"asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@element.ProductId">View Details</a>
          </td>
      </tr>
  }
</table>
<a class="btn btn-primary"asp-area="" asp-controller="Product" asp-action="Edit" >New</a>